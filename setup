#!/bin/bash

read -p "Please Confirm Installation of Spectra [y/n]: " confirm

if [ $confirm == y ] || [ $confirm == Y ]
then
  echo -e "\nInstalling Python3 Dependencies..."
  pip3 install opencv-python
  pip3 install imagehash
  pip3 install -U numpy scipy scikit-learn
  echo -e "\nSuccessfully Installed Dependencies!"
elif [ $confirm == n ] || [ $confirm == N ]
then
  echo -e "\nInstallation Aborted, No Dependencies Installed!"
else
  echo -e "\nInvalid Flag, Installation Aborted!"
  exit 1
fi
